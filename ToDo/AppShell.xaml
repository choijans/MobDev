<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:ToDo.Views"
       x:Class="ToDo.AppShell">
    <!-- You can choose which page should be initially visible.
         For this example, weâ€™ll start with SignInPage. -->
    <ShellContent Title="Sign In"
                  ContentTemplate="{DataTemplate views:SignInPage}"
                  Route="SignInPage" />
    <ShellContent Title="Sign Up"
                  ContentTemplate="{DataTemplate views:SignUpPage}"
                  Route="SignUpPage" />
     <ShellContent Title="To Do"
                  ContentTemplate="{DataTemplate views:ToDoTab}"
                  Route="ToDoTab" />
    <ShellContent Title="Completed"
                  ContentTemplate="{DataTemplate views:Completed}"
                  Route="Completed" />
</Shell>


